.row
  .span8
    .row
      .span8
        %h4
          %strong= @movie[:original_name]
    .row
      .span3
        = image_tag( @movie[:posters][1][:url], :alt => @movie[:original_name] )
      .span5
        %strong Release year:
        = @movie[:released][0,4]
        %br
        %strong Description:
        = @movie[:overview]
        %hr        
        %h5 Google Play Store:
        = image_tag @movie[:href]
        %strong Price:
        = @movie[:price]
        %hr
        = link_to "Back", :back, :class => 'btn'