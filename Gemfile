source 'http://rubygems.org'

gem 'rails', '3.2.13'
gem "rails_config"
gem "twitter-bootstrap-rails"
gem 'jquery-rails'
gem "parallel"
gem "ruby-tmdb"
gem "nokogiri"
gem 'haml-rails'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test do
  gem 'rspec-rails'
  gem 'vcr'
  gem 'webmock'
  gem 'cucumber-rails', :require => false
  gem "capybara-webkit"
end

group :test, :development do
